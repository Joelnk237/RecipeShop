  </div>

  <div class="container mx-auto p-6">
    <div id="favoritenListe" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8">
      {{#each this.rezepte}}
        <div>
          <a href="/rezepte/{{this.Rid}}">
            <img src="{{this.fullUrl}}" alt="{{this.fullUrl}}" class="w-full h-40 object-cover rounded-lg mb-3">
            <h2 class="text-lg font-bold">{{this.Title}}</h2>
          </a>

        </div>
      {{/each}}
    </div>
