      <a href="/categories/{{this.Kid}}/rezepte"><h1 class="text-2xl font-bold text-gray-800 mb-4">{{this.KTyp}}</h1></a>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
    {{#each this.recipes}}

        <a href="/rezepte/{{this.Rid}}" class='block'>
          <div class='bg-white rounded-xl shadow-md p-3'>
            <img src='{{this.urlBild}}' alt='{{this.Title}}' class='w-full h-40 object-cover rounded-lg mb-3'><hr>
